<header class="masthead text-center text-white header-bg-fx mb-5">
  <div class="masthead-content">
    <div class="container px-5 ">
      <h1>Mes commandes</h1>
    </div>
  </div>
  <div class="bg-circle-1 bg-circle"></div>
  <div class="bg-circle-2 bg-circle"></div>
  <div class="bg-circle-3 bg-circle"></div>
  <div class="bg-circle-4 bg-circle"></div>
</header>
<!-- ORDERS-->
<div class="order-section">
  <% @orders.each do |order| %>
    <% if order.user_id == current_user.id%>
      <div class="order1">
        <h5>Commande n°<%= order.id %></h5>
        <span><b>Prix total :</b> <%= order.total_price %>€</span>
        <span><b>Date :</b> <%= order.date %></span>
        <div>
          <i class="fa-solid fa-circle-check fs-4" style="color: green"></i>
          <%= link_to order_path(order.id) do %>
            <i class="fa-solid fa-eye fs-4"></i>
          <% end %>
        </div>
      </div>
      <hr class="hr-order">
    <% else %>
    <% end %>
  <% end %>
</div>
<!-- ORDERS END -->
