        <img src="<%= item.img_url %>" 
                    alt="img cat" class="kitten-img">
        <div class="product-text mt-2">
            <h5><%= item.title %></h5>
            <h6><%= item.price %>â‚¬</h6>
        </div>
        <div class="section-btn">
             <button><%= link_to "Voir plus", item_path(item), class: "product-btn" %></button>
             <%= button_to 'Ajouter au panier', carts_path, remote: true, params: {item_id: item.id} ,method: :post, class: "add-button-index" %>
