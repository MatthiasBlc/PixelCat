<header class="masthead text-center text-white header-bg-fx">
            <div class="masthead-content">
                <div class="container px-5 ">
                    <h1>S'inscrire</h1>
                </div>
            </div>
            <div class="bg-circle-1 bg-circle"></div>
            <div class="bg-circle-2 bg-circle"></div>
            <div class="bg-circle-3 bg-circle"></div>
            <div class="bg-circle-4 bg-circle"></div>
</header>

<div class="form-section mb-5">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label "Adresse email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
      </div>
      <div class="field">
        <%= f.label "Mot de passe" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
      </div>
        <div class="field">
        <%= f.label "Confirmation du mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
      </div>


      <div class="actions">
        <%= f.submit "Valider", class: "form-btn"%>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

    
</div>

