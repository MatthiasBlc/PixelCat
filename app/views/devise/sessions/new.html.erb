<header class="masthead text-center text-white header-bg-fx">
            <div class="masthead-content">
                <div class="container px-5 ">
                    <h1>Se connecter</h1>
                </div>
            </div>
            <div class="bg-circle-1 bg-circle"></div>
            <div class="bg-circle-2 bg-circle"></div>
            <div class="bg-circle-3 bg-circle"></div>
            <div class="bg-circle-4 bg-circle"></div>
</header>

<div class="form-section mb-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "Adresse email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
      </div>

      <div class="field">
        <%= f.label "Mot de passe" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label "se souvenir de moi" %>
        </div>
      <% end %>

      <div class="actions2">
        <%= f.submit "Connexion", class: "form-btn"%> 
      </div>
      <div class="actions2-links">
      <%= render "devise/shared/links" %>
      </div>
    <% end %>
</div>


