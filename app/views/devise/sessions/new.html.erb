<h2 class="text-center mt-4">Se connecter</h2>

<div class="form-section mb-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "Adresse email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
      </div>

      <div class="field">
        <%= f.label "Mot de passe" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label "se souvenir de moi" %>
        </div>
      <% end %>

      <div class="actions2">
        <%= f.submit "Connexion", class: "form-btn"%> 
      </div>
      <div class="actions2-links">
      <%= render "devise/shared/links" %>
      </div>
    <% end %>
</div>


